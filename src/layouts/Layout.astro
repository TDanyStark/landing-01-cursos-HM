---
interface Props {
	title: string;
}

const { title } = Astro.props;
import { URL_BASE } from '../constans';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/webp" href={URL_BASE+"favicon.webp"} />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<!-- meta descripcion -->
		<meta name="description" content="El entrenamiento rápido y concreto donde aprenderás el paso a paso para posicionar tu marca y aumentar las ventas usando las técnicas de marketing de las grandes compañías." />

		<!-- og:etiquetas -->
		<meta property="og:title" content="¡Despierta! de novato a estratega para posicionar tu marca" />
		<meta property="og:description" content="El entrenamiento rápido y concreto donde aprenderás el paso a paso para posicionar tu marca y aumentar las ventas usando las técnicas de marketing de las grandes compañías." />
		<meta property="og:image" content={URL_BASE + "img/og.jpg"} />
	</head>
	<body>
		<slot />
	</body>
</html>

