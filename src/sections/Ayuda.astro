---
import Cardayuda from "../components/Cardayuda.astro";
import { URL_BASE } from "../constans";
---

<section class="py-44 lg:py-60">
  <div class="max-w-[1000px] mx-auto p-2">
    <div>
      <div
        class="globo p-4 lg:p-12 text-verde-market font-bold text-4xl lg:text-6xl text-center bg-morado-market rounded-3xl border-8 border-b-[20px] border-verde-market relative"
      >
        <p>"LA SUERTE NO EXISTE, EXISTE EL ENTRENAMIENTO Y LA OPORTUNIDAD"</p>
      </div>
    </div>
    <div class="mt-32">
      <div>
        <h2
          class="text-center font-bold text-4xl lg:text-6xl text-morado-market"
        >
          NECESITAS AYUDA
        </h2>
        <h3 class="text-center font-bold text-gray-500 text-2xl lg:text-4xl">
          Contacta a nuestro comerciales
        </h3>
      </div>
      <div class="flex flex-col lg:flex-row justify-between mt-20 gap-16">
        <Cardayuda
          nombre="Juliet Garces"
          cargo="Key Account Manager COL"
          img="juliet"
          bandera="col"
        />
        <Cardayuda
          nombre="Leidy Poveda"
          cargo="Key Account Manager MIA"
          img="leidy"
          bandera="usa"
        />
      </div>
    </div>
    <div class="mt-44">
      <div
        class="globo p-4 lg:p-12 text-morado-market text-4xl lg:text-6xl text-center bg-white rounded-3xl border-8 border-b-[20px] border-verde-market relative"
      >
        <p>
          <span class="font-extrabold">No esperes más para alcanzar tu máximo potencial</span> e iniciar a
          comprender este maravilloso mundo del marketing digital.
        </p>
      </div>
    </div>
  </div>
</section>

<style>
  .globo::after {
    content: "";
    position: absolute;
    bottom: -10px;
    right: 80px;
    background: transparent;
    width: 0px;
    height: 0px;
    border-bottom: 80px solid #00ef04;
    border-right: 80px solid transparent;
    border-left: 80px solid transparent;
    transform: rotate(90deg);
    z-index: -2;
  }
</style>
